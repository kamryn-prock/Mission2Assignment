@model CalculatorModel;

<form method="post">
    @*Labels to grab assignments*@
    <label>Assignment Score:</label>
    <input id="AScore" asp-for="Assignment" /> <br />
    <label>Group Project Score:</label>
    <input id="GPScore" asp-for="Group_Project"/> <br />
    <label>Quizzes Score:</label>
    <input id="QScore" asp-for="Quizzes"/> <br />
    <label>Exams Score:</label>
    <input id="EScore" asp-for="Exams" /> <br />
    <label>Intex Score:</label>
    <input id="IScore" asp-for="Intex" /> <br />

    @*Calculator Button*@
    <input id="btnCalc" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>
</form>

